<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:weightSum="2"
            android:layout_marginLeft="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textStyle="bold"
                android:paddingTop="3dp"
                android:paddingLeft="6dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:background="#2196f3"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_slab_thin"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:gravity="left"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_slab_thin"
                android:paddingTop="3dp"
                android:paddingLeft="6dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:background="#2196f3"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="75dp"
        android:weightSum="2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/s3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_slab_thin"
            android:paddingTop="3dp"
            android:paddingLeft="6dp"
            android:paddingBottom="3dp"
            android:paddingRight="6dp"
            android:background="#2196f3"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/s4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:gravity="left"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_slab_thin"
            android:paddingTop="3dp"
            android:paddingLeft="6dp"
            android:paddingBottom="3dp"
            android:paddingRight="6dp"
            android:background="#2196f3"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="75dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/s5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:fontFamily="@font/roboto_slab_thin"
            android:paddingTop="3dp"
            android:paddingLeft="6dp"
            android:paddingBottom="3dp"
            android:paddingRight="6dp"
            android:background="#2196f3"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/s6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:gravity="left"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_slab_thin"
            android:paddingTop="3dp"
            android:paddingLeft="6dp"
            android:paddingBottom="3dp"
            android:paddingRight="6dp"
            android:background="#2196f3"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

        <TextView
            android:id="@+id/s7"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_slab_thin"
            android:paddingTop="3dp"
            android:paddingLeft="6dp"
            android:paddingBottom="3dp"
            android:paddingRight="6dp"
            android:background="#2196f3"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:layout_marginTop="25dp"
            android:text="My STUDYtable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/roboto_slab_bold"
            android:textColor="#000000"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/simpleImageView"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="17dp"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginRight="3dp"
                android:fontFamily="@font/roboto_slab_thin"
                android:textColor="#000000"
                android:textSize="16dp" />

        </LinearLayout>

        <Button
            android:onClick="deadline"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="My deadlines"
            android:textAllCaps="false"
            android:background="@drawable/roundbtn"
            android:layout_marginTop="22dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:textColor="#ffff"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_slab_bold"/>



    </LinearLayout>


<!--    footer start-->
    <RelativeLayout
        android:id="@+id/InnerRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/name_op"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_slab_bold"
                android:layout_marginBottom="-14dp"
                android:layout_marginStart="16dp"
                android:textColor="#000000"
                android:textFontWeight="12"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/roboto_slab_bold"
                    android:gravity="center_vertical"
                    android:text="STUDY"
                    android:textColor="#7C7A7A"
                    android:textSize="22dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_slab_bold"
                    android:gravity="center_vertical"
                    android:text="table"
                    android:textColor="#7C7A7A"
                    android:textSize="42dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_slab_thin"
                android:text="CARE A SMILE"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="16dp"
                android:textColor="#7C7A7A"
                android:textFontWeight="12"
                android:textSize="20dp" />



        </LinearLayout>


    </RelativeLayout>

<!--    footer end-->

</RelativeLayout>